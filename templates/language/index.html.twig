{% extends 'base.html.twig' %}

{% block title %}Languages{% endblock %}

{% block body %}
<div class="container center">
    <h3>Langues</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for language in languages %}
            <tr>
                <td>{{ language.id }}</td>
                <td>{{ language.label }}</td>
                <td>{{ language.name }}</td>
                <td>
                    <a href="{{ path('app_language_show', {'id': language.id}) }}">afficher |</a>
                    <a href="{{ path('app_language_edit', {'id': language.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas encore des langues</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_language_new') }}">Ajouter une nouvelle langue</a>
</div>
{% endblock %}
