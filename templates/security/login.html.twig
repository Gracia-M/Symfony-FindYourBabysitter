{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container center">
    <h2>Connexion</h2>
    <form method="post" class="row">
        {% if error %}
            <div class="col s12 m6 l6 offset-m3 offset-l3"> 
                <span class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}
        <div class="col s12 m6 l6 offset-m3 offset-l3">
            <input type="email" name="email" id="inputEmail" class="" autocomplete="email" required autofocus placeholder="Votre email">
        </div>
        <div class="col s12 m6 l6 offset-m3 offset-l3">
            <input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" required placeholder="Mot de passe">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="input-field col s12">
            <input type="submit" class="btn btn-primary" value="Se Connecter" >
        </div>
    </form>
</div>
{% endblock %}
