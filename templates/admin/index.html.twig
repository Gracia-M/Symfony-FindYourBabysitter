{% extends "base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block content %}
    <div class="admin-page">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <a href="{{ path('article_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a>
                    <h5>Babysitters</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Prenom</th>
                            <th>Nom</th>
                            <th>Localisation</th>
                            <th>Disponible</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for babysitter in babysitters %}
                            <tr>
                                <td>{{ i }}</td>
                                <td><a href="{{ path('app_show', {'url': babysitter.url}) }}" target="_blank">{{ babysitter.firstname}}, {{ babysitter.lastname}}</a></td>
                                <td>
                                    <span class="badge {{ babysitter.isAvailable ? 'blue' : 'red' }}">
                                        {{ babysitter.isAvailable ? 'oui' : 'non' }}
                                    </span>
                                </td>
                                {# <td>{{ babysitter.isAvailable ? babysitter. |date('d/m/Y') : '-' }}</td> #}
                                {# <td>{{ article.lastUpdateDate|date('d/m/Y') }}</td> #}
                                <td>
                                    <a href="{{ path('app_edit', {'id': babysitter.id }) }}"><i class="material-icons blue-text">modifier</i></a>
                                    <a href="{{ path('app_remove', {'id': babysitter.id}) }}"><i class="material-icons red-text">effacer</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12 m-t-30">
                    <h5>Utilisateurs</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Adresse email</th>
                            <th>Username</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.username }}</td>
                                <td>
                                    <span class="badge blue">
                                        admin.
                                    </span>
                                </td>
                                <td>
                                    <a href=""><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}