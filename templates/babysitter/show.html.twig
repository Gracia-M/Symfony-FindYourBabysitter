            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ babysitter.lastname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ babysitter.gender }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ babysitter.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ babysitter.description }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ babysitter.isAvailable ? 'Yes' : 'No' }}</td>
